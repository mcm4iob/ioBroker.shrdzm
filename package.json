    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/eslint-config": "^2.0.1",
    "@iobroker/testing": "^5.0.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/chai": "^4.3.20",
